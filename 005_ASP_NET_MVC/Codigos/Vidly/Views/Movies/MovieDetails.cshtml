@model Vidly.Models.Movie
@{
    ViewBag.Title = "MovieDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
    DateTime ReleaseDate = @Model.ReleaseDate;
    DateTime DateAdded = @Model.DateAdded;

}

<h2>@Model.Name</h2>
<ul>
    <li><b>Genre:</b> @Model.Genre.Name</li>
    <li><b>Release Date:</b> @ReleaseDate.ToLongDateString()</li>
    <li><b>Date Added:</b> @DateAdded.ToLongDateString()</li>
    <li><b>Number in Stock:</b> @Model.NumberInStock</li>
</ul>
